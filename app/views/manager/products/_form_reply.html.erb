<%= form_for [:manager, @comment],
  class: "form-group", remote: true do |f| %>
  <%= f.text_area :content, class: "form-control", id: "content_comment-#{comment.id}" %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :parent_comment_id, value: comment.id %>
  <%= f.hidden_field :commentable_type, value: Product.name %>
  <%= f.hidden_field :commentable_id, value: @product.id %>
  <%= button_tag type: :submit, class: "btn btn-success btn-sm" do %>
    <i class="fa fa-reply-all"></i>
  <% end %>
<% end %>
