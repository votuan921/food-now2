<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title"><%= t ".bills_of_store" %></h4>
          <div class="border-search">
            <%= render partial: "search", search: @search %>
          </div>
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th><%= t ".stt" %></th>
                  <th><%= t ".custommer" %></th>
                  <th><%= t ".receiving_address" %></th>
                  <th><%= t ".store" %></th>
                  <th><%= t ".created_at" %></th>
                  <th><%= t ".updated_at" %></th>
                  <th><%= t ".status" %></th>
                  <th></th>
                </tr>
              </thead>
              <tbody id="table_bills">
                <% if @bills %>
                  <%= render @bills %>
                <% else %>
                  <%= t ".empty" %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= paginate @bills, theme: Settings.theme.theme_config %>
</div>

<%= javascript_include_tag Settings.url_select2 %>
