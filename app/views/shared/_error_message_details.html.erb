<% if object.errors.any? %>
  <div id="error_explanation" class="mb-5">
    <div class="alert alert-danger">
      <%= t ".error", count: pluralize(object.errors.count, "error") %>
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
