<div class="container-login">
  <div class="justify-content-center h-100">
    <div class="login">
      <div class="card-header">
        <h2><%= t ".change_your_password" %></h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name),
          html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
          <% if @minimum_password_length %>
            <em>(<%= t ".characters_minimum", {"count": @minimum_password_length} %>)</em>
          <% end %><br/>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-key"></i></span>
            </div>
            <%= f.password_field t(".password"), autocomplete: t(".new_password"),
              class: "form-control", placeholder: t(".password") %>
          </div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-key"></i></span>
            </div>
            <%= f.password_field t(".password_confirmation"), autocomplete: t(".new_password"),
              class: "form-control", placeholder: t(".password_confirmation") %>
          </div>
          <div class="form-group">
            <%= f.submit t(".change_my_password"), class: "btn float-right login_btn" %>
          </div>
        <% end %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
