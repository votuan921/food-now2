<div class="container-login">
  <div class="justify-content-center h-100">
    <div class="login">
      <div class="card-header">
        <h2><%= t ".forgot_password" %></h2>
      </div>
      <div class="card-body">
        <%= form_for resource, as: resource_name, url: password_path(resource_name),
          html: {method: :post} do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="input-group form-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fa fa-user"></i></span>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: t(".email"),
            class: "form-control", placeholder: t(".email") %>
        </div>
        <div class="form-group">
          <%= f.submit t(".send_reset"), class: "btn float-right login_btn" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
