<div class="container-login">
  <div class="justify-content-center h-100">
    <div class="login">
      <div class="card-header">
        <h2><%= "#{t ".edit"}" %></h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
          html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <br>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-user"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: t(".email"),
              class: "form-control", placeholder: t(".email") %>
          </div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-user"></i></span>
            </div>
            <%= f.text_field :name, autofocus: true, autocomplete: t(".name"),
              class: "form-control", placeholder: t(".name") %>
          </div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-map-pin"></i></span>
            </div>
            <%= f.text_field :address, autofocus: true, autocomplete: t(".address"),
              class: "form-control", placeholder: t(".address") %>
          </div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-phone"></i></span>
            </div>
            <%= f.text_field :phone, autofocus: true, autocomplete: t(".phone"),
              class: "form-control", placeholder: t(".phone") %>
          </div>
          <% if @minimum_password_length %>
          <em>(<%= t ".characters_minimum", {"count": @minimum_password_length} %>)</em>
          <% end %>
          <br />
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-key"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: t(".new_password"),
              class: "form-control", placeholder: t(".password") %>
          </div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-key"></i></span>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: t(".new_password"),
              class: "form-control", placeholder: t(".password_confirmation") %>
          </div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-key"></i></span>
            </div>
            <%= f.password_field :current_password, autocomplete: t(".current_password"),
              class: "form-control", placeholder: t(".current_password") %>
          </div>
          <%= link_to t(".back"), :back %>
          <div class="form-group">
            <%= f.submit t(".update"), class: "btn float-right login_btn" %>
          </div>
        <% end %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
