<div class="cart-body">
  <%= search_form_for [:admin, @search] do |f| %>
    <div class="row">
      <div class="col-4">
        <div class="form-group">
          <%= f.label t(".name") %>
          <%= f.search_field :name_cont, class: "form-control form-control-line" %>
        </div>
      </div>
      <div class="col-4">
        <div class="form-group">
          <%= f.label t(".email") %>
          <%= f.search_field :email_cont, class: "form-control form-control-line" %>
        </div>
      </div>
      <div class="col-4">
        <div class="form-group">
          <div id="role">
          <%= f.label t(".role") %>
          <%= f.select :role_eq,
            options_for_select(enum_options_for_select_value(User, :role),
            selected: f.object.role_eq), {include_blank: t(".search")},
            {class: "form-control select2"} %>
          </div>
        </div>
      </div>
      <div class="col">
        <%= button_tag type: :submit, class: "btn btn-success btn-sm mb-2 pt-0" do %>
          <i class="fa fa-search"></i> <%= t ".search" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
