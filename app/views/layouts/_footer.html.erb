<!-- Register modal -->   
<div class="modal fade" id="register" tabindex="-1" role="dialog" aria-labelledby="myRegister" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content modal-popup">
			<a href="#" class="close-link"><i class="icon_close_alt2"></i></a>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html =>  { :class => "popup-form" }) do |f| %>
				<div class="login_icon">
                    <%= image_tag "logofood", height: '50', width: '100' %>
                </div>
                <%= f.text_field :name, autofocus: true, autocomplete: t(".name"), class: "form-control form-white", placeholder: "Name" %>
                <%= f.email_field :email, autofocus: true, class: "form-control form-white", placeholder: "Email" %>
                <%= f.password_field :password, autocomplete: "off", class: "form-control form-white", placeholder: "Password" %>
                <%= f.password_field :password_confirmation, autocomplete: t(".new_password"), class: "form-control form-white", placeholder: "Password Confirmation" %>
				<div id="pass-info" class="clearfix"></div>
				<div class="checkbox-holder text-left">
					<div class="checkbox">
						<input type="checkbox" value="accept_2" id="check_2" name="check_2" />
