<header class="topbar">
  <nav class="navbar top-navbar navbar-expand-md navbar-dark">
    <div class="navbar-header">
      <%= link_to t(".home") do %>
        <%= image_tag "logo2.png", height: '40', width: '80' %>
      <% end %>
    </div>
    <div class="navbar-collapse">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item hidden-sm-up">
          <%= link_to "", class: "nav-link nav-toggler waves-effect waves-light" do %>
            <i class="ti-menu"></i>
          <% end %>
        </li>
      </ul>

      <div class="dropdown">
        <button class="btn btn-sm btn-warning dropdown-toggle" type="button" id="dropdown_store"
          data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fa fa-star"></i> <%= t ".store_manager" %>
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdown_store">
          <%= link_to "#", class: "dropdown-item", "data-toggle": "modal",
            "data-target": "#show_store", id: "get_store" do %>
            <i class="fa fa-star"></i> <%= t ".show_store" %>
          <% end %>
        </div>
      </div>

      <ul class="navbar-nav mr-4 ml-2">
        <li>
            <%= link_to destroy_user_session_path, method: :delete,
              class: "btn btn-danger btn-sm" do %>
              <i class="fa fa-sign-out"></i> <%= t ".logout" %>
            <% end %>
          </li>
      </ul>

      <ul class="navbar-nav my-lg-0">
        <li class="nav-item dropdown">
          <%= link_to "#", class: "nav-link dropdown-toggle text-muted waves-effect waves-dark",
  "data-toggle": "dropdown", "aria-haspopup": "true", "aria-expanded": "false" do %>
            <%= image_tag "avata.png", alt: "user", class: "img-circle", width: Settings.manager.width_avata %>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
</header>

<div class="modal fade" id="show_store" tabindex="-1" role="dialog" aria-labelledby="show_storeTitle"
  aria-hidden="true">

  <div class="modal-dialog" role="document">

    <div class="modal-content">
      <div class="modal-header">
        <div id="message_store" class="alert d-none w-80 mt-1">
          <i class="fa fa-check mx-2"></i>
          <strong id="content_store"></strong>
        </div>
      </div>
      <div class="modal-body" id="list_store">
      </div>

      <div id="store_form"></div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary close_store" data-dismiss="modal"><%= t ".close" %></button>
      </div>
    </div>
  </div>
</div>
